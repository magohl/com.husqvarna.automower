  "flow": {
    "triggers": [
      {
        "id": "mower_activity_capability_changed",
        "title": {
          "en": "Activity changed"
        },
        "tokens": [
          {
            "name": "value",
            "type": "string",
            "title": {
              "en": "Activity"
            },
            "example": "MOWING"
          }
        ],
        "args": [
          {
            "name": "Automower",
            "type": "device",
            "filter": "driver_id=mower"
          }
        ]
      },
      {
        "id": "mower_mode_capability_changed",
        "title": {
          "en": "Mode changed"
        },
        "tokens": [
          {
            "name": "value",
            "type": "string",
            "title": {
              "en": "Mode"
            },
            "example": "---"
          }
        ],
        "args": [
          {
            "name": "Automower",
            "type": "device",
            "filter": "driver_id=mower"
          }
        ]
      },
      {
        "id": "mower_state_capability_changed",
        "title": {
          "en": "State changed"
        },
        "tokens": [
          {
            "name": "value",
            "type": "string",
            "title": {
              "en": "State"
            },
            "example": "---"
          }
        ],
        "args": [
          {
            "name": "Automower",
            "type": "device",
            "filter": "driver_id=mower"
          }
        ]
      },
      {
        "id": "mower_battery_capability_changed",
        "title": {
          "en": "Battery level changed"
        },
        "tokens": [
          {
            "name": "value",
            "type": "number",
            "title": {
              "en": "Battery"
            },
            "example": 42
          }
        ],
        "args": [
          {
            "name": "Automower",
            "type": "device",
            "filter": "driver_id=mower"
          }
        ]
      },
      {
        "id": "mower_errorcode_capability_changed",
        "title": {
          "en": "Errorcode changed"
        },
        "tokens": [
          {
            "name": "value",
            "type": "number",
            "title": {
              "en": "Error code"
            },
            "example": 3
          },
          {
            "name": "description",
            "type": "string",
            "title": {
              "en": "Error description"
            },
            "example": "Outside working area"
          }
        ],
        "args": [
          {
            "name": "Automower",
            "type": "device",
            "filter": "driver_id=mower"
          }
        ]
      },
      {
        "id": "mower_nextstart_capability_changed",
        "title": {
          "en": "Next start changed"
        },
        "tokens": [
          {
            "name": "value",
            "type": "string",
            "title": {
              "en": "Next start"
            },
            "example": "Thursday 14:00"
          }
        ],
        "args": [
          {
            "name": "Automower",
            "type": "device",
            "filter": "driver_id=mower"
          }
        ]
      },
      {
        "id": "mower_inactivereason_capability_changed",
        "title": {
          "en": "Inactive Reason changed"
        },
        "tokens": [
          {
            "name": "value",
            "type": "string",
            "title": {
              "en": "Inactive Reason"
            },
            "example": "NONE"
          }
        ],
        "args": [
          {
            "name": "Automower",
            "type": "device",
            "filter": "driver_id=mower"
          }
        ]
      },
      {
        "id": "mower_lastposition_capability_changed",
        "title": {
          "en": "Last position changed"
        },
        "tokens": [
          {
            "name": "latitude",
            "type": "number",
            "title": {
              "en": "Latitude"
            },
            "example": 56.3104275
          },
          {
            "name": "longitude",
            "type": "number",
            "title": {
              "en": "Longitude"
            },
            "example": 13.8465345
          }
        ],
        "args": [
          {
            "name": "Automower",
            "type": "device",
            "filter": "driver_id=mower"
          }
        ]
      }
    ],
